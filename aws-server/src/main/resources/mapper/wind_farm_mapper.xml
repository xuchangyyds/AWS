<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aws.mapper.WindFarmMapper">

    <resultMap id="WindFarmMap" type="com.aws.po.WindFarm">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
        <result column="polygon" property="polygon" typeHandler="com.aws.config.JsonTypeHandler"/>
        <result column="region_id" property="regionId"/>
        <result column="detail_address" property="detailAddress"/>
    </resultMap>

    <select id="getByRegionId" resultMap="WindFarmMap">
        SELECT * FROM wind_farm where region_id= #{regionId}
    </select>

</mapper>